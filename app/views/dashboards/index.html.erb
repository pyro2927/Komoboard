<h1>Listing dashboards</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
  </tr>

<% @dashboards.each do |dashboard| %>
  <tr>
    <td><%= dashboard.title %></td>
    <td><%= link_to 'Show', dashboard %> | <%= link_to 'Edit', edit_dashboard_path(dashboard) %> | <%= link_to 'Destroy', dashboard, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<h3>New Dashboard</h3>
<%= form_for [@user, Dashboard.new], :html => { :class => :form } do |f| %>
  <td>
    <%= f.text_field :title, :class => 'text' %>
  </td>
  <td>
    <button class="green full_width text_only">Create New</button>
  </td>
<%end%>


